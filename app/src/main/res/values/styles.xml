<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="collapsed_app_bar" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--    region Text-->
    <style name="TextMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTitle" parent="TextMatch">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginEnd">@dimen/dp8</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
    </style>


    <!--    region text Data Globe, MainActivity-->
    <style name="TextDataKind" parent="TextMatch">
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextDataCount" parent="TextMatch">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/dp8</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="TextHeader" parent="TextMatch">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextListData" parent="TextHeader">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/violet</item>
    </style>
    <!--    endregion-->


    <!--    region Text Card, ChartCountryActivity-->
    <style name="TextTitleCard" parent="TextTitle">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextSubTitleCard" parent="TextTitleCard">
        <item name="android:textSize">12sp</item>
    </style>
    <!--    endregion-->
    <!--    endregion-->


    <!--    region LinearLayout-->
    <style name="LinearMatchHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:layout_marginEnd">@dimen/dp8</item>
    </style>

    <style name="LinearTextVertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">@dimen/dp8</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearTextCurrentData" parent="LinearMatch">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearDataChart" parent="LinearMatch">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CardLinearHorizontal" parent="LinearDataChart">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--    endregion-->

    <style name="CardDataCovid" parent="LinearMatch">
        <item name="android:layout_weight">1</item>
        <item name="cardElevation">@dimen/dp4</item>
        <item name="cardCornerRadius">@dimen/dp8</item>
        <item name="android:layout_margin">@dimen/dp8</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="transparent">#00000000</color>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottomsheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
</resources>